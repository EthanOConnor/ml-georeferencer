{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "targets": "all",
    "externalBin": [],
    "icon": [
      "icons/icon.icns",
      "icons/mlg-icon.png"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "Local-first georeferencing tool for orienteering and mapping workflows. Align scanned or digital maps to georeferenced imagery and export world files/PRJ with quality metrics.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "Local-first map georeferencing with quality metrics",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "productName": "ML Georeferencer",
  "mainBinaryName": "ml-georeferencer",
  "version": "0.1.0",
  "identifier": "com.mlgeoreferencer.desktop",
  "plugins": {},
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "ML Georeferencer",
        "width": 800,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: filesystem:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' https://* ipc:; object-src 'none'; frame-ancestors 'none'",
      "capabilities": [
        "core",
        "dialog"
      ],
      "assetProtocol": {
        "scope": ["$APP/*"]
      }
    }
  }
}
