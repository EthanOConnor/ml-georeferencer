{
  "$schema": "https://schema.tauri.app/capabilities/2",
  "identifier": "dialog",
  "description": "Allow showing native file/folder selection dialogs",
  "windows": ["main"],
  "webviews": ["main"],
  "urls": [
    "local://*",
    "http://localhost:*",
    "asset://*"
  ],
  "permissions": [
    "dialog:allow-open",
    "dialog:allow-save"
  ]
}