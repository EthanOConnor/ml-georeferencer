{
  "$schema": "https://schemas.tauri.app/v2/capabilities.schema.json",
  "identifier": "fs",
  "description": "File system access for loading/saving datasets and projects.",
  "permissions": [
    "fs:default",
    { "identifier": "fs:allow-read",  "scope": ["$APP/*", "$RESOURCE/*", "$HOME/**", "$TEMP/**"] },
    { "identifier": "fs:allow-write", "scope": ["$APP/*", "$HOME/**", "$TEMP/**"] }
  ]
}
